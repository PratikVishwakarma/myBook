<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:layout_marginTop="8dp"
    android:background="#fafafa"
    android:padding="2dp"
    android:elevation="8dp"
    android:shadowColor="#000000">
    <ImageView
        android:id="@+id/family_list_item_image"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:adjustViewBounds="true"
        android:scaleType="fitCenter"
        android:src="@drawable/friends_goofy"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingLeft="8dp">
        <TextView
            android:id="@+id/family_list_item_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Donald Duck"
            android:textStyle="bold"
            android:paddingLeft="4dp"
            android:textColor="#000000"
            android:textSize="16sp"/>
        <TextView
            android:id="@+id/family_list_item_age"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="More Info"
            android:layout_marginTop="4dp"
            android:layout_marginLeft="4dp"
            android:textStyle="bold"
            android:layout_weight="2"
            android:textColor="#AA000000"
            android:textSize="14sp"/>

        <TextView
            android:id="@+id/family_list_item_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="More Info"
            android:layout_marginTop="4dp"
            android:layout_marginLeft="4dp"
            android:textStyle="bold"
            android:layout_weight="2"
            android:textColor="#AA000000"
            android:textSize="14sp"/>
    </LinearLayout>
</LinearLayout>